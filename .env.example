############################################
# Local development template – copy to .env
# and fill in with real secrets. Never commit
# the populated .env files to git.
############################################
APP_ENV=local
PORT=3000

# --- Supabase ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# Frontend uses the public values exposed via /env.js
PUBLIC_SUPABASE_URL=${SUPABASE_URL}
PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
PUBLIC_API_BASE_URL=http://localhost:3000

# --- External APIs ---
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
UNSPLASH_SECRET_KEY=your-unsplash-secret-key
OPENAI_API_KEY=sk-your-openai-key
STABILITY_API_KEY=your-stability-key

# --- Contact / Support (Gmail + ImprovMX 예시) ---
CONTACT_MAIL_FROM=help@crama.app
CONTACT_MAIL_TO=help@crama.app
CONTACT_MAIL_BCC=gmlthd94@gmail.com
CONTACT_MAIL_SUBJECT_PREFIX=[Crama 문의]

# Gmail 앱 비밀번호를 이용한 발송 (둘 중 하나만 설정)
CONTACT_GMAIL_USER=gmlthd94@gmail.com
CONTACT_GMAIL_PASS=your-gmail-app-password

# 또는 커스텀 SMTP
CONTACT_SMTP_HOST=smtp.yourprovider.com
CONTACT_SMTP_PORT=587
CONTACT_SMTP_SECURE=false
CONTACT_SMTP_USER=smtp-user
CONTACT_SMTP_PASS=smtp-password

# IMAP Sync (선택) - Gmail 사용 시 기본값
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=${CONTACT_GMAIL_USER}
IMAP_PASS=${CONTACT_GMAIL_PASS}

# MySQL (선택) - 문의 데이터 보관용
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=secret
DB_NAME=crama

# --- Paddle (sandbox) ---
PADDLE_SANDBOX=true
PADDLE_CLIENT_TOKEN=your-paddle-client-token
PADDLE_PRICE_ID_DEFAULT=pri_default
PADDLE_PRICE_ID_PRO=pri_pro
PADDLE_SELLER_ID=12345
